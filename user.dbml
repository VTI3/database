Table personal {
  user_id varchar [note: '关联用户ID']
  gender varchar [note: '性别']
  birth_day date [note: '出生日期']
  nationality varchar[] [note: '国籍，存储为 数组']
  ethnicity varchar[] [note: '用户的种族信息，存储 数组']
  profession varchar [note: '职业']
  education varchar [note: '教育程度']
  
  // Languages
  languages json [note: '语言与等级的 JSON 数组，示例: [{"language": "English", "level": "Fluent"}, {"language": "Spanish", "level": "Beginner"}]']

  // Types
  style varchar[] [note: '用户自己的性格类型']
  type varchar[] [note: '用户喜欢的性格类型']
  sexual_orientation enum [note: '性取向']
  
  // Interests
  interests varchar[] [note: '兴趣数组，逗号分隔']
  NSFW_itrest varchar[] [note: 'NSFW兴趣数组，逗号分隔']

  // Physical attributes
  hair_color enum [note: '头发颜色']
  hair_length enum [note: '头发长度']
  eye_color enum [note: '眼睛颜色']
  skin_color enum [note: '肤色']
  height float [note: '身高']
  weight float [note: '体重']
  bust float [note: '胸围']
  waist float [note: '腰围']
  hips float [note: '臀围']
  body_shape enum [note: '体型']
  bra_size enum [note: '胸罩尺寸']
  plastic_surgery enum [note: '整容状况']
  tattoos enum [note: '纹身状况']
  piercings enum [note: '穿孔状况']  
}



Table user_accounts {
  user_id varchar [primary key, note: '主识别token，16进制字符']
  user_state enum() [note: '账户的状态']
  user_login_method varchar[] [note: '账户已经验证的登录方法，第一个就是默认登录方法']
  username varchar [unique, note: '用户名，唯一标识']
  profile_picture varchar [note: '用户头像的URL']
  bio varchar [note: '用户个人简介']
  created_at datetime [note: '用户账户创建时间']
  created_method enum('claim_invited', 'claim_provider_order', 'claim_provider_kol', 'claim_user_receive_money', 'claim_user_check_trust', 
'register_invited', 'register_unknown_user', 'register_check_trust', 'register_indiapp_user', 'register_indiapp_provider'
) [note: '用户账户创建方法']
  claimed_at datetime [note: '用户本人claim账户的时间']
  claimed_method enum('google', 'facebook', 'instagram', 'twitter', 'tiktok', 'apple_id', 'whatsapp', 'phone_number', 'email', 'telegram'
) [note: '用户本人claim账户的方法']
  updated_at datetime [note: '用户最后更新时间']
  updated_method enum('by_itv3','by_indiapp') [note: '用户最后更新方法']
}

Table login_methods {
  user_id varchar [note: '关联用户ID']
  google_id varchar [note: 'Google 用户ID Token']
  google_email varchar [note: 'Google 邮箱']
  facebook_id varchar [note: 'Facebook 用户ID']
  facebook_email varchar [note: 'Facebook 邮箱']
  instagram_id varchar [note: 'Instagram 用户ID']
  instagram_username varchar [note: 'Instagram 用户名']
  twitter_id varchar [note: 'Twitter 用户ID']
  twitter_username varchar [note: 'Twitter 用户名']
  apple_id varchar [note: 'Apple 用户ID']
  whatsapp_phone_number varchar [note: 'WhatsApp 电话号码']
  phone_verified boolean [note: '电话号码是否经过验证']
  region_number varchar [note: '电话号码区号']
  phone_number varchar [note: '电话号码']
  email_verified boolean [note: '邮箱是否经过验证']
  email_address varchar [note: '邮箱地址']
  telegram_handle varchar [note: 'Telegram 用户名']
  telegram_phone_number varchar [note: 'Telegram 登录电话']
}

Table subscriptions {
  id varchar [note: '发起订阅的人id']
  subscriber_id varchar [note: '发起订阅的人id']
  subscribed_id varchar [note: '被订阅的人id']
  method varchar [note: '用于已经在哪些平台订阅了这个人["instagram"，“facebook”]']
  created_at datetime [note: '什么时候创建的,可以用来排序']
}


Table referral_infos {
    id varchar [note: '关联用户ID']
    referrer_id varchar [note: '一级推荐者的名字']
    referee_id varchar [note: '一级被推荐者的用户ID，十六进制字符串']  
    method varchar [note: '一级推荐者使用什么方法推荐']
    created_at datetime [note: '什么时候创建的,可以用来排序']
}


Table wallet {
  user_id varchar [note: '关联用户ID']
  wallet_id varchar [primary key, note: '主识别token，16进制字符']
  wallet_currency enum() [note: '默认核算的币种']
  last_method enum() [note: '上次使用的付款方式']
  last_request_state enum [note: '上次使用的入金/收款方式']

  // Wallet Info
  wallet_username varchar [note: '用户名，唯一标识']

  // Balances
  balance_usd float [note: 'USD 余额']
  balance_eur float [note: 'EUR 余额']
  balance_cny float [note: 'CNY 余额']
  balance_sgd float [note: 'SGD 余额']
  balance_jpy float [note: 'JPY 余额']
  balance_coupon float [note: '可替代平台费用的coupon余额']
  // Add more currencies as needed...
}


Table credit_cards {
  card_id varchar [primary key]
  wallet_id varchar [note: '关联钱包ID']
  card_number varchar [note: '信用卡号']
  expiration_date varchar [note: '信用卡有效期 (MM/YY)']
  name varchar [note: '持卡人姓名']
  cvv varchar [note: '卡片安全码']
  address_line1 varchar [note: '账单地址第一行']
  address_line2 varchar [note: '账单地址第二行']
  city varchar [note: '城市']
  postal_code varchar [note: '邮政编码']
  country enum [note: '国家']
}

Table swifts {
  swift_id varchar [primary key]
  wallet_id varchar [note: '关联钱包ID']
  account_name varchar [note: '账户名称']
  swift_bic varchar [note: 'SWIFT/BIC 号码']
  account_number varchar [note: '账户号码 IBAN']
  bank_name varchar [note: '银行名称（通过BIC自动获取）']
  bank_address varchar [note: '银行地址（通过BIC自动获取）']
}

Table sepas {

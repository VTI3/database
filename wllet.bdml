  access_token varchar [note: 'API 访问 token']

}

Table adyens {
  adyen_id varchar [primary key]
  wallet_id varchar [note: '关联钱包ID']
  account varchar [note: '账户名称']
  access_token varchar [note: 'API 访问 token']

}

Table crypto_eth {
  eth_id varchar [primary key]
  wallet_id varchar [note: '关联钱包ID']
  wallet_address varchar [note: 'ETH 钱包地址']
  token_address varchar [note: 'Token 地址']
  state enum [note: 'Crypto 账户类型']

}

Table crypto_ton {

Table crypto_bsc {
  bsc_id varchar [primary key]
  wallet_id varchar [note: '关联钱包ID']
  wallet_address varchar [note: 'BSC 钱包地址']
  token_address varchar [note: 'Token 地址']
  state enum [note: 'Crypto 账户类型']


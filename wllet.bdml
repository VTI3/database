  account_name varchar [note: '账户持有人姓名']
  routing_number varchar [note: '银行路由号码']
  swift_bic varchar [note: '银行识别码（BIC）']
  account_number varchar [note: 'BAN 号']
  bank_name varchar [note: '银行名称（通过BIC自动获取）']
  bank_address varchar [note: '银行地址（通过BIC自动获取）']

}

Table paypals {
